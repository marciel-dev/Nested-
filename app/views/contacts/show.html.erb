<div class="alert alert-success fade in">
    <button class="close" data-dismiss="alert">×</button>
    <%= notice %>
</div>
<div class="row"><!--row-->
    <div class=" col-sm-4"><!--col-->
      <div class="panel panel-default"> <!--panel-->
        <div class="panel-heading">Contato</div>
          <table class="table table-sm"> <!--tabela-->
            <thead>
                <tr>
                  <td> Nome </td>
                  <td><%= @contact.name %></td>
                </tr>
                <tr>
                  <td> Telefone </td>
                  <td><%= @contact.phone %></td>
                </tr>
                <tr>
                  <td> E-mail </td>
                  <td><%= @contact.email %></td>
                </tr>
                <tr>
                  <td> Descrição </td>
                  <td><%= @contact.description %></td>
                </tr>
            </thead>
          </table><!--/tabela-->
      </div><!--/panel-->
  </div><!--col-->
  <div class=" col-sm-4"><!--col-->
    <div class="panel anel-info"> <!--panel-->
      <div class="panel-heading">Endereço</div>
        <table class="table table-sm"><!--table-->
          <thead>
              <tr>
                <td> Rua </td>
                <td><%= @contact.address.street %></td>
              </tr>
              <tr>
                <td> Número </td>
                <td><%= @contact.address.number %></td>
              </tr>
              <tr>
                <td> Cidade </td>
                <td><%= @contact.address.city %></td>
              </tr>
              <tr>
                <td> Estado </td>
                <td><%= @contact.address.state %></td>
              </tr>
          </thead>
        </table><!--/table-->
      </div><!--/panel-->
  </div><!--/col-->
</div><!--/row-->
<%= link_to 'Editar ?', edit_contacts_path(@contact), class: "btn btn-info" %>
